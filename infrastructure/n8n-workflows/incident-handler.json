{
  "name": "Incident Handler",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "incident",
        "responseMode": "responseNode"
      },
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [250, 300]
    },
    {
      "parameters": {
        "url": "http://backend:8000/api/v1/chat",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            { "name": "message", "value": "={{ $json.body.log_snippet }}" },
            { "name": "agent_id", "value": "incident" }
          ]
        }
      },
      "name": "Classify Incident",
      "type": "n8n-nodes-base.httpRequest",
      "position": [450, 300]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"analysis\": $json.response, \"conversation_id\": $json.conversation_id } }}"
      },
      "name": "Respond",
      "type": "n8n-nodes-base.respondToWebhook",
      "position": [650, 300]
    }
  ],
  "connections": {
    "Webhook": { "main": [[{ "node": "Classify Incident", "type": "main", "index": 0 }]] },
    "Classify Incident": { "main": [[{ "node": "Respond", "type": "main", "index": 0 }]] }
  }
}

